{
 "scripts": {
  "build": "tsc",
  "makepretty": "prettier --write -l '**/*.ts'",
  "lint": "yarn tslint -p .",
  "precommit": "lerna run tsc:check && lint-staged"
 },
 "lint-staged": {
  "*.{js,ts,md}": [
   "yarn prettier --write"
  ],
  "src/**/*.ts": [
   "yarn lint --fix"
  ]
 },
 "husky": {
  "hooks": {
   "pre-commit": "lerna run tsc:check && lint-staged"
  }
 },
 "devDependencies": {
  "husky": "^4.2.3",
  "lerna": "^3.20.2",
  "lint-staged": "^10.0.8",
  "prettier": "^1.19.1"
 },
 "license": "MIT"
}
