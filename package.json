{
 "scripts": {
  "build": "tsc",
  "makepretty": "prettier --write -l '**/*.ts'",
  "lint": "yarn tslint -p .",
  "precommit": "lerna run tsc:check && lint-staged"
 },
 "lint-staged": {
  "*.{js,ts,md}": [
   "yarn prettier --write",
   "git add"
  ],
  "src/**/*.ts": [
   "yarn lint --fix",
   "git add"
  ]
 },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run tsc:check && lint-staged"
    }
  },
 "devDependencies": {
  "husky": "^1.3.0",
  "lerna": "^3.8.0",
  "lint-staged": "^8.1.0",
  "prettier": "^1.15.3"
 },
 "license": "MIT"
}
